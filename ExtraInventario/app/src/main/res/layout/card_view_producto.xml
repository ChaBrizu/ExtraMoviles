<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="2dp"
    >

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
        >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbNombre"
                android:layout_below="@+id/lbId"
                android:textSize="18sp"
                android:text="Nombre: "
                android:textStyle="bold"
            />

            <TextView
                android:id="@+id/nomProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lbNombre"
                android:layout_alignBaseline="@+id/lbNombre"
                android:text="NOMBREEEEEEEEEEEEEEEE"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/lbId"
                android:text="ID: "
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/idProducto"
                android:text="ID"
                android:layout_toRightOf="@+id/lbId"
                android:layout_alignBaseline="@+id/lbId"
                android:textSize="14sp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbPrecio"
                android:layout_toLeftOf="@+id/precioProducto"
                android:layout_alignBaseline="@+id/lbDescripción"
                android:text="$"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingRight="2dp"
                android:textColor="@color/colorMonedos"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/precioProducto"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/lbDescripción"
                android:text="precio"
                android:paddingRight="16dp"
                android:textSize="14sp"
                android:textColor="@color/colorMonedos"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbModelo"
                android:text="MOD:"
                android:layout_toRightOf="@+id/idProducto"
                android:layout_alignBaseline="@+id/idProducto"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingLeft="32dp"
                android:paddingRight="4dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/modProducto"
                android:layout_toRightOf="@+id/lbModelo"
                android:layout_alignBaseline="@+id/lbModelo"
                android:text="modelo"
                android:textSize="14sp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbDescripción"
                android:text="Descripción:"
                android:layout_below="@+id/lbNombre"
                android:textSize="14sp"
                android:textStyle="bold"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/descProducto"
                android:layout_below="@+id/lbDescripción"
                android:text="descripción"
                android:textSize="14sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
            />

            <ImageButton
                android:id="@+id/layout_list_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorTotal"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="Borrar"
                android:src="@drawable/delete" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>